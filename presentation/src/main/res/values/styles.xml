<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppNoActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HeaderLabelStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">sans-serif</item>
        <item name="fontWeight">600</item>
    </style>

    <style name="BasicLabelStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">sans-serif</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="LighterBasicLabelStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">sans-serif</item>
        <item name="fontWeight">300</item>
    </style>

    <style name="CardGreyBackground">
        <item name="cardBackgroundColor">@color/light_gray</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPadding">8dp</item>
    </style>
</resources>
